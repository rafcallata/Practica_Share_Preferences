<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtClave"
        android:layout_below="@+id/edtUsuario"
        android:layout_centerHorizontal="true"
        android:hint="Ingrese ContraseÃ±a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/edtClave"
        android:layout_alignLeft="@+id/edtClave"
        android:layout_alignStart="@+id/edtClave" />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:text="Recordar"
        android:id="@+id/checkbox"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/cambiocolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="54dp"
        android:text="Seleccione un color para el tema"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btncolor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cambiocolor"
        android:layout_alignLeft="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="33dp"
        android:text="color4" />

    <Button
        android:id="@+id/btncolor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cambiocolor"
        android:layout_alignLeft="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="-148dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:text="color1" />

    <Button
        android:id="@+id/btncolor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cambiocolor"
        android:layout_alignLeft="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="-44dp"
        android:layout_marginTop="34dp"
        android:text="color2" />

    <Button
        android:id="@+id/btncolor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cambiocolor"
        android:layout_alignLeft="@+id/checkbox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="217dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="32dp"
        android:text="color3" />


</RelativeLayout>